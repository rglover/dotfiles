# If getting an error saying another username is not allowed, make sure to
# do `ssh-add ~/.ssh/key-file-name`.

Host rglover_gh
    User git
    HostName github.com
    UseKeychain yes
    AddKeysToAgent yes
    PreferredAuthentications publickey
    IdentityFile ~/.ssh/me@ryanglover.net

Host rglover_bb
    User git
    HostName bitbucket.org
    UseKeychain yes
    AddKeysToAgent yes
    PreferredAuthentications publickey
    IdentityFile ~/.ssh/me@ryanglover.net

