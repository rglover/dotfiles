# Rely on OSX defaults, using the following pattern if additional paths
# are required.

# Example:
# PATH=$PATH:$HOME/usr/bin
# export PATH

# NVM
source ~/.nvm/nvm.sh

# Add /themeteorchef to PATH to access scripts
export PATH="$PATH:$HOME/projects/themeteorchef/"

# Add /themeteorchef/packages to PACKAGE_DIRS for local package development.
export METEOR_PACKAGE_DIRS=$HOME/projects/themeteorchef/packages:$HOME/projects/cleverbeagle/packages:$HOME/projects/themeteorchef

# Add MongoDB bin to PATH
export PATH="$PATH:$HOME./usr/bin/mongo"

# Add Golang to PATH
export GOROOT="/usr/local/go"
export GOPATH="$HOME/projects/cleverbeagle/go"
export PATH="$HOME/projects/cleverbeagle/go/bin:$PATH"

# Add ESLint to PATH
export PATH="$HOME/.nvm/versions/node/v7.6.0/bin/eslint:$PATH"

# Add MJML to PATH
export PATH="$PATH:$HOME/node_modules/.bin"

# Add Deno to PATH
export PATH="$PATH:$HOME/.deno/bin"
