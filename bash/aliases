#Git Aliases
alias gs='git status'
alias gc='git commit'
alias gl='git log'
alias ga='git add'
alias gpo='git push origin '
alias gpom='git push origin master'
alias gpuom='git pull origin master'
alias gp='git push '

# Morsel Aliases
alias morsel='cd ~/projects/morsel'
alias clients='cd ~/projects/morsel/clients'

# The Meteor Chef Aliases
alias tmc='cd ~/projects/themeteorchef'
alias clonebase='git clone git@meteorchef:themeteorchef/base.git'
alias mws='meteor --settings settings-development.json'

# Personal Project Aliases
alias rg='cd ~/projects/ryanglover.net'
alias lip='cd ~/projects/lip'

# Misc. Aliases
alias dp='cd ~/projects/doopoll'

# OSX Aliases
alias hideFiles='defaults write com.apple.finder AppleShowAllFiles FALSE && killall Finder'
alias showFiles='defaults write com.apple.finder AppleShowAllFiles TRUE && killall Finder'
alias hideDesktop='defaults write com.apple.finder CreateDesktop false && killall Finder'
alias showDesktop='defaults write com.apple.finder CreateDesktop true && killall Finder'
