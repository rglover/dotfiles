# -----------
# Development
# -----------

alias command_jobs_ngrok='cd ~ && ./ngrok http 4000 -region=us -hostname=cmd-jobs.cleverbeagle.com -host-header=localhost'
alias command_app_ngrok='cd ~ && ./ngrok http 3000 -region=us -hostname=cmd-app.cleverbeagle.com -host-header=localhost'

# -----------
# Staging
# -----------

alias kubectl_command_staging='cd ~/projects/command/.deploy && kubectl --kubeconfig="command-staging/kubectl_config"'
alias helm_command_staging='cd ~/projects/command/.deploy && helm --kubeconfig "command-staging/kubectl_config"'
alias cs_logs_app='kubectl_command_staging logs -l app=app -f'

# -----------
# Production
# -----------

alias kubectl_command_production='cd ~/projects/command/.deploy && kubectl --kubeconfig="command-production/kubectl_config"'
alias helm_command_production='cd ~/projects/command/.deploy && helm --kubeconfig "command-production/kubectl_config"'
alias cp_logs_jobs='kubectl_command_production logs -l app=jobs -f'
